name="test" ; ./run-epidemic.pl > /tmp/epidemic-"${name}".dat 3> /tmp/epidemic-"${name}".gens.dat 2> /tmp/epidemic-"${name}".stats ; cat /tmp/epidemic-"${name}".stats ; (echo 'set terminal pngcairo size 800,600' ; echo 'set output "/tmp/epidemic-'"${name}"'.png"' ; echo 'set logscale y' ; echo 'plot [0:480] [1:400000] "/tmp/epidemic-'"${name}"'.dat" using ($1):($2) with lines title "S", "/tmp/epidemic-'"${name}"'.dat" using ($1):($3) with lines title "E", "/tmp/epidemic-'"${name}"'.dat" using ($1):($4) with lines title "I", "/tmp/epidemic-'"${name}"'.dat" using ($1):($5) with lines title "R"') | gnuplot ; (echo 'set terminal pngcairo size 800,600' ; echo 'set output "/tmp/epidemic-'"${name}"'.gens.png"' ; echo 'set logscale y' ; echo 'plot [0:30] [1:400000] "/tmp/epidemic-'"${name}"'.gens.dat" using ($1):($2) pt 7 ps 1 title "gen count"') | gnuplot ; convert -size 1200x364 'xc:white' -font 'Source-Code-Pro' -pointsize 20 -gravity NorthWest -annotate 0 "$(cat /tmp/epidemic-"${name}".stats)" /tmp/epidemic-"${name}".stats.png
